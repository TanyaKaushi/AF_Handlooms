<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:layout_width="820dp"
        android:layout_height="wrap_content"
        android:background="@drawable/k"/>

    <TextView
        android:layout_width="291dp"
        android:layout_height="204dp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/artifika"
        android:text="AF HANDLOOMS"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="42sp" />

    <ImageView
        android:layout_width="120dp"
        android:id="@+id/logo"
        android:layout_height="120dp"
        android:background="@drawable/lo"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/moto"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cinzel_decorative"
        android:text="The Quality Reminds"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/af"
        android:padding="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/metal_mania"
        android:textColor="@android:color/background_dark"
        android:text="Already have an Account? Login"/>

    <Button
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/design"
        android:fontFamily="@font/artifika"
        android:padding="20dp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>
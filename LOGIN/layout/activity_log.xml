<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/se"
    tools:context=".Log">

    <TextView
        android:layout_width="291dp"
        android:layout_height="204dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/artifika"
        android:text="AF HANDLOOMS"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <ImageView
        android:layout_width="120dp"
        android:id="@+id/logo"
        android:layout_height="120dp"
        android:background="@drawable/lo"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/moto"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cinzel_decorative"
        android:text="The Quality Reminds"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="520dp"
        android:layout_height="60dp"
        android:layout_below="@+id/moto"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/design"
        android:padding="20dp"
        android:textSize="18dp"
        android:inputType="number"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:hint=" CONTACT NUMBER"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:id="@+id/pas"
        android:layout_width="520dp"
        android:layout_height="60dp"
        android:layout_below="@+id/phone"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/design"
        android:padding="20dp"
        android:textSize="18dp"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:hint=" PASSWORD"
        android:textColorHint="@android:color/white"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/forgotPw"
            android:layout_below="@+id/pas"
            android:text="Forgot Password?"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="-11dp"
            android:textStyle="bold"
            android:layout_marginLeft="220dp"/>



    <Button
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="510dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/af"
        android:padding="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/artifika"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:text="Login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/admin"
        android:text="Admin Login"
        android:layout_below="@+id/signIn"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="-14dp"
        android:textStyle="bold"
        android:layout_marginLeft="270dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/notAdmin"
        android:text="I'm not Admin"
        android:layout_below="@+id/signIn"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="-14dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>